<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_sale"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="9dp">

    <androidx.cardview.widget.CardView
        android:layout_width="174dp"
        android:layout_height="221dp"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_preload"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_category"
                android:layout_width="49.58dp"
                android:layout_height="17dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="83dp"
                android:background="@drawable/bg_text_latest"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:lineHeight="13.5px"
                android:text="Phones"
                android:textColor="@color/black_custom"
                android:textFontWeight="600"
                android:textSize="9sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="87dp"
                android:layout_height="36dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="top"
                android:lineHeight="19.5px"
                android:text="Samsung S10"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_category"
                app:layout_constraintTop_toBottomOf="@+id/tv_category" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_price"
                android:layout_width="43dp"
                android:layout_height="12dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="bottom"
                android:lineHeight="15px"
                android:text="$ 180,000"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="7sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_category"
                android:src="@drawable/plus_max"
                app:layout_constraintBottom_toBottomOf="@+id/iv_sale"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_like"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_category"
                android:src="@drawable/heart"
                app:layout_constraintBottom_toBottomOf="@+id/btn_add"
                app:layout_constraintEnd_toStartOf="@+id/btn_add"
                app:layout_constraintTop_toTopOf="@+id/btn_add" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_sale"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:lineHeight="15px"
                android:text="30 % off"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>